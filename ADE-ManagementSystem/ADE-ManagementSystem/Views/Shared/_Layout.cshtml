@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ADE Management System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="shortcut icon" href="~/Images/favicon.ico">

    <style>
        .footer {
            position: fixed;
            left: 0px;
            bottom: 0px;
            height: 50px;
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="~/">
                    @*<i class="fa fa-cubes"></i>*@
                <img width="30" src="~/images/ADE-Logo.png" /> ADE Management System
                @*Final1*@
            </a>
                @*@Html.ActionLink("ADE Management System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (Roles.IsUserInRole(User.Identity.GetUserName(), "Admin"))
                        {
                            <p>yes</p>
                        }
                        else
                        {
                            <p>no</p>
                        }
                    }

                    if(@User.IsInRole("Admin")){
                    <li>@Html.ActionLink("Manage Users", "Index", "ManageUser")</li>

                    }else{
                    not amdin}
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <div class="panel-footer footer text-center" style="margin-top: 20px">
            ADE Inquiry Management Software
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
